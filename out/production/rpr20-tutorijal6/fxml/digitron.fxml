<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="CENTER" hgap="5.0" vgap="5.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ba.unsa.etf.rpr.tutorijal06.Controller">
    <stylesheets>
        <URL value="@digitron.css" />
    </stylesheets>
    <columnConstraints>
        <ColumnConstraints hgrow="ALWAYS" />
        <ColumnConstraints hgrow="ALWAYS" />
        <ColumnConstraints hgrow="ALWAYS" />
        <ColumnConstraints hgrow="ALWAYS" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
    </rowConstraints>
    <children>
        <Button fx:id="mod" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#buttonClickMod" text="\%" textAlignment="CENTER" GridPane.rowIndex="1" />
        <Button fx:id="div" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#buttonClickDiv" text="/" textAlignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <Button fx:id="mul" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#buttonClickMul" text="x" textAlignment="CENTER" GridPane.columnIndex="2" GridPane.rowIndex="1" />
        <Button fx:id="minusBtn" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#buttonClickMinus" text="-" textAlignment="CENTER" GridPane.columnIndex="3" GridPane.rowIndex="1" />
        <Button fx:id="btn7" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#buttonClickSeven" text="7" textAlignment="CENTER" GridPane.rowIndex="2" />
        <Button fx:id="btn8" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#buttonClickEight" text="8" textAlignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        <Button fx:id="btn9" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#buttonClickNine" text="9" GridPane.columnIndex="2" GridPane.rowIndex="2" />
        <Button fx:id="btn4" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#buttonClickFour" text="4" textAlignment="CENTER" GridPane.rowIndex="3" />
        <Button fx:id="btn5" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#buttonClickFive" text="5" textAlignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="3" />
        <Button fx:id="btn6" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#buttonClickSix" text="6" textAlignment="CENTER" GridPane.columnIndex="2" GridPane.rowIndex="3" />
        <Button fx:id="btn1" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#buttonClickOne" text="1" textAlignment="CENTER" GridPane.rowIndex="4" />
        <Button fx:id="btn2" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#buttonClickTwo" text="2" textAlignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="4" />
        <Button fx:id="btn3" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#buttonClickThree" text="3" textAlignment="CENTER" GridPane.columnIndex="2" GridPane.rowIndex="4" />
        <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#buttonClickZero" text="0" textAlignment="CENTER" GridPane.columnSpan="2" GridPane.rowIndex="5" />
        <Button fx:id="dotBtn" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#buttonClickP" text="." textAlignment="CENTER" GridPane.columnIndex="2" GridPane.rowIndex="5" />
        <Button fx:id="plusBtn" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#buttonClickPlus" text="+" textAlignment="CENTER" GridPane.columnIndex="3" GridPane.rowIndex="2" GridPane.rowSpan="2" />
        <Button fx:id="equalsBtn" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#buttonClickEquals" text="=" GridPane.columnIndex="3" GridPane.rowIndex="4" GridPane.rowSpan="2" />
      <Label fx:id="display" maxWidth="1.7976931348623157E308" onDragDetected="#textClick" text="${controller.prviParametar}" GridPane.columnSpan="4" />
    </children>
    <opaqueInsets>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
    </opaqueInsets>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</GridPane>
